{
  "name": "reveal-md",
  "description": "reveal.js on steroids! Get beautiful reveal.js presentations from your Markdown files.",
  "keywords": [
    "markdown",
    "reveal",
    "revealjs",
    "html",
    "server",
    "cli"
  ],
  "version": "6.1.2",
  "repository": {
    "type": "git",
    "url": "git://github.com/webpro/reveal-md.git"
  },
  "homepage": "https://github.com/webpro/reveal-md#readme",
  "bugs": "https://github.com/webpro/reveal-md/issues",
  "license": "MIT",
  "bin": {
    "reveal-md": "bin/reveal-md.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "type": "module",
  "scripts": {
    "test": "node --test test/*.spec.js",
    "lint": "eslint lib test",
    "format": "prettier --write eslint.config.mjs lib/**/*.js bin/*.js test/*.js *.md",
    "release": "release-it"
  },
  "dependencies": {
    "debug": "4.3.6",
    "express": "4.19.2",
    "fs-extra": "11.2.0",
    "glob": "11.0.0",
    "highlight.js": "11.10.0",
    "json5": "2.2.3",
    "livereload": "0.9.3",
    "lodash": "4.17.21",
    "mermaid": "11.0.2",
    "mustache": "4.2.0",
    "open": "10.1.0",
    "reveal.js": "5.1.0",
    "serve-favicon": "2.5.0",
    "update-notifier": "7.2.0",
    "yaml-front-matter": "4.1.1",
    "yargs-parser": "21.1.1"
  },
  "optionalDependencies": {
    "puppeteer": "23.1.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.9.1",
    "eslint": "9.9.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import-x": "4.1.1",
    "eslint-plugin-prettier": "5.2.1",
    "globals": "15.9.0",
    "prettier": "3.3.3",
    "release-it": "17.6.0"
  },
  "engines": {
    "node": ">=18"
  }
}
